<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tripidevs.swoly.MainActivity"
    tools:deviceIds="wear_square"
    android:weightSum="1"
    android:background="@color/background">


    <TextView
        android:text="@string/default_side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eachside"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="42sp"
        android:textColor="@color/black"
        android:layout_above="@+id/textView2"
        android:layout_alignParentTop="true"
        android:background="@color/light_grey"
        android:gravity="center" />

    <Button
        android:text="-5"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:id="@+id/maxminus"
        android:layout_alignParentStart="true"
        android:textSize="14sp"
        android:layout_toStartOf="@+id/max"
        android:layout_alignBottom="@+id/max"
        android:layout_alignTop="@+id/max"
        android:onClick="changeWeight" />

    <Button
        android:text="+5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maxplus"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/max"
        android:layout_toEndOf="@+id/max"
        android:layout_alignTop="@+id/max"
        android:onClick="changeWeight" />

    <TextView
        android:text="55%"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:id="@+id/percent"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="32sp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/maxminus" />

    <TextView
        android:text="Percentage:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@color/textColor2"
        android:textSize="20sp"
        android:layout_above="@+id/percent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="135.0"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:id="@+id/max"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="32sp"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="-5"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:id="@+id/percentminus"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:onClick="changePercent" />

    <TextView
        android:text="Max Weight:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/textColor2"
        android:layout_above="@+id/maxminus"
        android:layout_alignParentStart="true" />

    <Button
        android:text="+5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/percentplus"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView5"
        android:layout_toEndOf="@+id/percent"
        android:onClick="changePercent" />

</RelativeLayout>
